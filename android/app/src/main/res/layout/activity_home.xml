<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/main">




        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/rewardLayout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 포인트"

                android:textColor="#ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/currentCoinValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3260"
                android:textColor="#ffffff"
                android:textSize="40dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/totalCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 포인트"
                    android:layout_marginRight="30dp"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/totalCoinValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1570"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        android:background="@drawable/reward_background"
        android:layout_below="@id/rewardLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler1"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/graph"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_graph" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home" />

        <ImageView
            android:id="@+id/main"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_category" />


    </LinearLayout>

</RelativeLayout>